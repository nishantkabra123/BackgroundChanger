<html>
<head>
    <link rel="stylesheet" href="~/css/login.css" />
</head>

<body>

    @model Task2.Models.UserModel

    @{
        ViewBag.Title = "User Login";
    }

    <div id="bg">
        <img id="bg_image" src="" alt="">
    </div>

    <div class="container" style="
    padding: 50px;
    max-width: 500px;
    margin-top: 100px;">

        <h1 style="position: relative;">User Login</h1>

        <div class="row">
            <div class="col-md-12">
                <form method="post" asp-controller="Home" asp-action="Login">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Email" style="font-weight: 700;font-size: 20px;margin-top: 10px;"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" style="font-weight: 700;font-size: 20px;"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Login</button>
                </form>
            </div>
        </div>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
